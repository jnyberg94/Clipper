{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipper",
  "version": "0.1.0",
  "identifier": "com.kolejain.clipper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },

  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "main",
        "label": "Clipper",
        "width": 700,
        "height": 800,
        "center": true,
        "resizable": true,
        "visible": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "transparent": true,
        "dragDropEnabled": true,
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 22,
          "y": 22
        }
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ],
        "script-src": [
          "'self'",
          "'unsafe-inline'",
          "'unsafe-eval'"
        ],
        "img-src": [
          "'self'",
          "asset:",
          "https://asset.localhost",
          "data:",
          "blob:"
        ],
        "font-src": [
          "'self'",
          "data:"
        ],
        "connect-src": [
          "'self'",
          "ipc:",
          "https://ipc.localhost"
        ]
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
